<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/item" android:padding="10dp"
    android:background="@drawable/listview_card"
    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:padding="5dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        >
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:text="Name"
            android:textColor="#000000"
            android:textSize="15sp" />
        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:numStars="5"
            android:stepSize="0.5" />
        <TextView
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingBar"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="detsssail"
            android:textColor="#939393"
            android:textSize="12sp"
            />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/time_pic"
            android:layout_width="15sp"
            android:layout_height="15sp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/detail"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/time_restaurant_open" />

        <TextView
            android:id="@+id/open_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail"
            android:layout_toRightOf="@+id/time_pic"
            android:textColor="#000000"
            android:textSize="12sp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:text="More.."
            android:textAlignment="center"
            android:textColor="#545454"
            android:textSize="10sp" />

    </RelativeLayout>
</LinearLayout>