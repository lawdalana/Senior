<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_insert_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.Senior.Faff.UserProfile.InsertUserProfile">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ButtonUserProfile"
        android:id="@+id/toolbar">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Profile"
            android:gravity = "center"
            android:id="@+id/toolbar_title"
            android:textSize="30sp"/>
    </android.support.v7.widget.Toolbar>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.7"
    android:background="@color/TabUserProfile"
    android:gravity="center"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/add_profilephoto"

        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"

      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="@string/TextUserProfile"
        android:layout_marginBottom="5dp"/>

    </LinearLayout>
    </LinearLayout>

</LinearLayout>


<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/backgroundpro"
    android:layout_height="0dp"
    android:layout_weight="2.5">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="40dp">
        <!--   <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Name"
               android:id="@+id/name"
               android:layout_marginBottom="20dp"
               android:textSize="20sp"/>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Profile"
            android:textSize="20sp"
            android:id="@+id/sign"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textColor="#000000"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line"
            android:layout_below="@+id/sign"
            android:id="@+id/line"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_below="@+id/line"
            android:id="@+id/picture_list"
            android:layout_centerHorizontal="true"
            android:gravity="center">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rlist1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:foregroundGravity="center"
                android:orientation="horizontal"
                android:scrollbars="vertical"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

        </LinearLayout>
        <Button
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:id="@+id/picture_button"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/picture_list"
            android:padding="2dip"
            android:background="@drawable/adduserphoto"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="15sp"
            android:layout_below="@+id/picture_button"
            android:id="@+id/name_txt"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:layout_width="500dp"
            android:layout_height="30dp"
            android:id="@+id/name"
            android:layout_marginBottom="5dp"
            android:padding="2dip"
            android:layout_below="@+id/name_txt"
            android:background="@drawable/edittextbox"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textSize="15sp"
            android:layout_below="@+id/name"
            android:id="@+id/address_txt"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:layout_width="500dp"
            android:layout_height="30dp"
            android:id="@+id/address"
            android:layout_marginBottom="5dp"
            android:padding="2dip"
            android:layout_below="@+id/address_txt"
            android:background="@drawable/edittextbox"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textSize="15sp"
            android:layout_below="@+id/address"
            android:id="@+id/email_txt"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:layout_width="500dp"
            android:layout_height="30dp"
            android:id="@+id/email"
            android:layout_marginBottom="5dp"
            android:padding="2dip"
            android:layout_below="@+id/email_txt"
            android:background="@drawable/edittextbox"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telephone:"
            android:textSize="15sp"
            android:layout_below="@+id/email"
            android:id="@+id/telephone_txt"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:layout_width="500dp"
            android:layout_height="30dp"
            android:id="@+id/telephone"
            android:layout_marginBottom="5dp"
            android:padding="2dip"
            android:layout_below="@+id/telephone_txt"
            android:background="@drawable/edittextbox"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender:"
            android:textSize="15sp"
            android:layout_below="@+id/telephone"
            android:id="@+id/gender_txt"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"/>
        <Spinner
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/gender"
            android:layout_marginBottom="10dp"
            android:padding="2dip"
            android:layout_below="@+id/gender_txt"

            >
        </Spinner>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Food Favourite Type:"
            android:textSize="15sp"
            android:layout_below="@+id/gender"
            android:id="@+id/favourite_type_text"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"/>
        <Spinner
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/favourite_type"
            android:layout_marginBottom="10dp"
            android:padding="2dip"
            android:layout_below="@+id/favourite_type_text"

            >
        </Spinner>

        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal"
            android:textSize="15sp"
            android:layout_below="@+id/favourite_type"
            android:id="@+id/list_show"
            android:textColor="#000000"
           >
        </android.support.v7.widget.RecyclerView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Age:"
            android:textSize="15sp"
            android:layout_below="@+id/list_show"
            android:id="@+id/age_txt"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:layout_width="500dp"
            android:layout_height="30dp"
            android:id="@+id/age"
            android:layout_marginBottom="20dp"
            android:padding="2dip"
            android:layout_below="@+id/age_txt"
            android:background="@drawable/edittextbox"/>
        <Button
            android:layout_width="5000dp"
            android:layout_height="wrap_content"
            android:id="@+id/submit"
            android:layout_centerHorizontal="true"
            android:text="Submit"
            android:layout_below="@+id/age"
            android:background="@color/ButtonUserProfile"/>

    </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>

</LinearLayout>
