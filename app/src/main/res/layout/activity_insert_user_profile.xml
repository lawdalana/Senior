<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_insert_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.Senior.Faff.UserProfile.InsertUserProfile">
    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ButtonUserProfile">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Profile"
            android:gravity = "center"
            android:id="@+id/toolbar_title"
            android:textSize="30sp"/>
    </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.7"
    android:background="@color/TabUserProfile"
    android:gravity="center"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/add_profilephoto"

        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"

      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="@string/TextUserProfile"
        android:layout_marginBottom="5dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:id="@+id/submit"
            android:text="Submit"

            android:background="@color/ButtonUserProfile"/>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/backgroundpro"
    android:layout_height="0dp"
    android:layout_weight="2.5">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="40dp"


        >
        <!--   <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Name"
               android:id="@+id/name"
               android:layout_marginBottom="20dp"
               android:textSize="20sp"/>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="30sp"
            android:id="@+id/sign"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textColor="#000000"
            />
        <EditText
            android:layout_width="500dp"
            android:layout_height="30dp"
            android:id="@+id/name"
            android:layout_marginBottom="20dp"
            android:padding="2dip"
            android:hint="Name"
            android:layout_below="@+id/sign"
            android:background="@drawable/edittextbox"/>

        <EditText
            android:layout_width="500dp"
            android:layout_height="30dp"
            android:id="@+id/email"
            android:layout_marginBottom="20dp"
            android:padding="2dip"
            android:layout_below="@+id/name"
            android:hint="Email"
            android:background="@drawable/edittextbox"/>
        <EditText
            android:layout_width="500dp"
            android:layout_height="30dp"
            android:id="@+id/telephone"
            android:layout_marginBottom="20dp"
            android:padding="2dip"
            android:layout_below="@+id/email"
            android:hint="Telephone No."
            android:background="@drawable/edittextbox"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/telephone"
            android:text="Gender"
            android:id="@+id/gender"
            android:layout_marginBottom="20dp"/>
        <Spinner
            android:layout_toRightOf="@+id/gender"
            android:layout_below="@+id/telephone"
            android:id="@+id/spinner1"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="30dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />
        <EditText
            android:layout_width="500dp"
            android:layout_height="30dp"
            android:id="@+id/age"
            android:layout_marginBottom="20dp"
            android:padding="2dip"
            android:layout_below="@+id/gender"
            android:hint="Age"
            android:background="@drawable/edittextbox"/>
        <EditText
            android:layout_width="500dp"
            android:layout_height="30dp"
            android:id="@+id/address"
            android:layout_marginBottom="20dp"
            android:padding="2dip"
            android:layout_below="@+id/age"
            android:hint="Address"
            android:background="@drawable/edittextbox"/>

    </RelativeLayout>

</LinearLayout>
</LinearLayout>
