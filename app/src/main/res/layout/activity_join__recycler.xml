<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/mix"
    android:background="@drawable/listview_card"
    android:layout_marginBottom="10dp"
   >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:padding="10dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="20dp"
            android:text="Name"
            android:textColor="#545454"
            android:textSize="15sp" />
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/logo_member"
            android:layout_width="15sp"
            android:layout_height="15sp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView1"
            android:layout_marginRight="10dp"
            android:background="@drawable/party_member"
            />

        <TextView
            android:id="@+id/people"
            android:layout_alignBottom="@+id/logo_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/logo_member"
            android:layout_below="@+id/textView1"
            android:textColor="#545454"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/slash"
            android:layout_alignBottom="@+id/logo_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/people"
            android:layout_below="@+id/textView1"
            android:text="/"
            android:textColor="#545454"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/max"
            android:layout_alignBottom="@+id/logo_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_toRightOf="@+id/slash"
            android:layout_marginRight="10dp"
            android:textColor="#545454"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_below="@+id/logo_member"
            android:layout_marginTop="5dp"
            android:maxLines="3"
            android:textColor="#939393"
            android:layout_marginBottom="5dp"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/time_pic"
            android:layout_width="15sp"
            android:layout_height="15sp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/detail"
            android:layout_marginRight="5dp"
            android:background="@drawable/time_restaurant_open"
            />


        <TextView
            android:id="@+id/appointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_alignBottom="@+id/time_pic"
            android:layout_below="@+id/detail"
            android:layout_toRightOf="@+id/time_pic"
            android:text="Apponintment"
            android:textColor="#545454"
            android:textSize="10sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/detail"
            android:textColor="#545454"
            android:text="More.."
            android:textSize="10sp" />


    </RelativeLayout>
</LinearLayout>