<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.Senior.Faff.UserProfile.UpdateUserProfile">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ButtonUserProfile"
        android:id="@+id/toolbar">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Profile"
            android:gravity = "center"
            android:id="@+id/toolbar_title"
            android:textSize="30sp"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="@color/TabUserProfile"
        android:gravity="center"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/add_profilephoto"

                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="@string/TextUserProfile"
                    android:layout_marginBottom="5dp"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:background="@color/backgroundpro"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="40dp"


                >
                <!--   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Name"
                       android:id="@+id/name"
                       android:layout_marginBottom="20dp"
                       android:textSize="20sp"/>-->
                <TextView
                    android:id="@+id/sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Edit User Profile"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/sign"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/line" />

                <TextView
                    android:id="@+id/picture_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line"
                    android:layout_marginBottom="5dp"
                    android:text="Profile Picture:"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/picture"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/picture_txt"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/adduserphoto"
                    android:padding="2dip" />

                <TextView
                    android:id="@+id/name_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/picture"
                    android:layout_marginBottom="5dp"
                    android:text="Name:"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="500dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/name_txt"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/edittextbox"
                    android:padding="2dip" />

                <TextView
                    android:id="@+id/address_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:layout_marginBottom="5dp"
                    android:text="Address:"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/address"
                    android:layout_width="500dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/address_txt"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/edittextbox"
                    android:padding="2dip" />


                <TextView
                    android:id="@+id/telephone_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/address"
                    android:layout_marginBottom="5dp"
                    android:text="Telephone:"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/telephone"
                    android:layout_width="500dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/telephone_txt"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/edittextbox"
                    android:padding="2dip" />


                <TextView
                    android:id="@+id/favourite_type_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/telephone"
                    android:layout_marginBottom="5dp"
                    android:text="Food Favourite Type:"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/favourite_type"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/favourite_type_text"
                    android:layout_marginBottom="10dp"
                    android:padding="2dip"

                    ></Spinner>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/list_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/favourite_type"
                    android:scrollbars="horizontal"
                    android:layout_marginBottom="20dp"
                    android:textColor="#000000"
                    android:textSize="15sp"></android.support.v7.widget.RecyclerView>

                <Button
                    android:id="@+id/submit"
                    android:layout_width="5000dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/list_show"
                    android:layout_centerHorizontal="true"
                    android:background="@color/ButtonUserProfile"
                    android:text="Submit" />

            </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</LinearLayout>
