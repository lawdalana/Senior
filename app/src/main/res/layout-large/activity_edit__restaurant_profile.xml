<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.Senior.Faff.RestaurantProfile.Edit_RestaurantProfile">
    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile Picture:"
                android:textSize="15sp"
                android:id="@+id/picture_txt"
                android:textColor="#000000"

                android:layout_marginBottom="5dp"/>
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start">

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/upload_button"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="2dip"
                    android:background="@drawable/adduserphoto"/>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rlist1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:foregroundGravity="center"
                        android:orientation="horizontal"
                        android:scrollbars="vertical"
                        app:layoutManager="android.support.v7.widget.LinearLayoutManager" />


                </LinearLayout>

            </android.support.v7.widget.LinearLayoutCompat>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textSize="15sp"
                android:id="@+id/name_txt"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/name"
                android:layout_marginBottom="5dp"
                android:padding="2dip"
                android:background="@drawable/edittextbox"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adddress:"
                android:textSize="15sp"
                android:id="@+id/address_txt"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:inputType="textMultiLine"
                android:lines="4"
                android:maxLines="6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/address"
                android:layout_marginBottom="5dp"
                android:padding="2dip"
                android:background="@drawable/edittextbox"
                android:scrollbars="vertical"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location:"
                android:textSize="15sp"
                android:id="@+id/location_txt"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"/>
            <fragment
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                tools:context="com.Senior.Faff.RestaurantProfile.Add_RestaurantProfile"
                android:layout_marginBottom="5dp">

            </fragment>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:textSize="15sp"
                android:id="@+id/description_txt"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:inputType="textMultiLine"
                android:lines="4"
                android:maxLines="6"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:id="@+id/description"
                android:scrollbars="vertical"
                android:layout_marginBottom="5dp"
                android:padding="2dip"
                android:background="@drawable/edittextbox"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Period:"
                android:textSize="15sp"
                android:id="@+id/period_txt"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/period"
                android:layout_marginBottom="5dp"
                android:padding="2dip"
                android:background="@drawable/edittextbox"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Telephone No:"
                android:textSize="15sp"
                android:id="@+id/telephone_txt"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/telephone"
                android:layout_marginBottom="5dp"
                android:padding="2dip"
                android:background="@drawable/edittextbox"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Food Favourite Type:"
                android:textSize="15sp"
                android:id="@+id/type_txt"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"/>
            <Spinner
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:id="@+id/favourite_type"
                android:layout_marginBottom="10dp"
                android:padding="2dip"

                >
            </Spinner>

            <android.support.v7.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal"
                android:textSize="15sp"
                android:id="@+id/list_show"
                android:layout_marginBottom="15dp"
                android:textColor="#000000"

                >
            </android.support.v7.widget.RecyclerView>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/next"
                android:layout_centerHorizontal="true"
                android:text="Edit"
                android:background="@color/ButtonUserProfile"/>


            <Button
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/delete"
                android:layout_centerHorizontal="true"
                android:text="Delete Restaurant"
                android:textColor="#000000"
                android:background="#d3d3d3"/>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
