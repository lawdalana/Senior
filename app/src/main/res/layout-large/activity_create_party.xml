<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.Senior.Faff.chat.CreateParty">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/creat_party_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Create Party" />

        <TextView
            android:id="@+id/party_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/creat_party_title"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Party Name" />

        <EditText
            android:id="@+id/party_name_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/creat_party_title"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/party_name" />

        <TextView
            android:id="@+id/member_size"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/party_name"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Member Size" />

        <EditText
            android:id="@+id/member_size_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/party_name"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/member_size" />

        <TextView
            android:id="@+id/party_detail"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/member_size"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Detail" />

        <EditText
            android:id="@+id/party_detail_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/member_size"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/party_detail" />

        <TextView
            android:id="@+id/appointment_party"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/party_detail"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Appointment" />

        <EditText
            android:id="@+id/appointment_party_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/party_detail"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/appointment_party" />

        <Button
            android:id="@+id/creat_party_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appointment_party"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:text="Create" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
